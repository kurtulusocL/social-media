@model SocialMedia.Entity.User.ForgotPassword
@{
    ViewBag.Title = "Şifremi Unuttum";
    TempData["Title"] = "Size Kod Gönderebilmemiz İçin Üye Oldurken Kullandığınız E-Mail Adresinizi Girin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="aa-catg-head-banner">
    <img src="~/Content/temp/web/img/fashion/fashion-header-bg-8.jpg" alt="banner" title="provechoo.com" style="max-height:350px;max-width:1400px;min-height:350px;min-width:1400px">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>@ViewBag.Title</h2>
                <ol class="breadcrumb">
                    <li><a href="~/Home/Index">Anasayfa</a></li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="aa-myaccount-register">
                                <h4>@ViewBag.Title</h4>
                                <h5>@TempData["Title"]</h5>
                                <form action="" class="aa-login-form" method="post">
                                    @Html.ValidationSummary()
                                    @using (Html.BeginForm("ForgotPassword", "UserAccount", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <label for="">E-Mail Adresiniz<span>*</span></label>
                                        <input type="text" name="Email" placeholder="E-Mail Adresiniz">
                                       
                                        <button type="submit" class="aa-browse-btn">Şifre Gönder</button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>